#!/bin/bash

instance=($(yc compute instance list | tail -n 4 |  awk -F\| '{print $3 $6}' ))

if [[ "$1" == "--list" ]]; then


cat<<EOF
{
    "_meta": {
        "hostvars": {
            "${instance[0]}": {
                "ansible_host": "${instance[1]}",
                "ansible_user": "ubuntu"
            },
            "${instance[2]}": {
                "ansible_host": "${instance[3]}",
                "ansible_user": "ubuntu"
            }
        }
    },
    "all": {
        "children": [
            "app",
            "db",
            "ungrouped"
        ]
    },
    "app": {
        "hosts": [
            "${instance[0]}"
        ]
    },
    "db": {
        "hosts": [
            "${instance[2]}"
        ]
    }
}
EOF

else
  echo "no args"
fi
